<Window x:Class="JourneyExpense.AdminForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JourneyExpense"
        mc:Ignorable="d"
        Title="AdminForm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddCarButton" Content="Добавить автомобиль" Margin="40,10,40,0" VerticalAlignment="Top" Height="39" Click="AddCarButton_Click"/>
        <Button x:Name="AddRoutesButton" Content="Добавить маршрут" Margin="40,10,40,0" VerticalAlignment="Top" Height="39" Click="AddRoutesButton_Click" Grid.Column="1"/>
        <Button x:Name="EditFuelButton" Content="Обновить цену" Margin="40,10,40,0" VerticalAlignment="Top" Height="39" Click="EditFuelButton_Click" Grid.Column="3"/>
        <Button x:Name="AddFuelButton" Content="Добавить топливо" Margin="40,10,40,0" VerticalAlignment="Top" Height="39"  Grid.Column="2" Click="AddFuelButton_Click"/>

    </Grid>
</Window>
