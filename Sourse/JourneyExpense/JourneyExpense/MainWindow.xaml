<Window x:Class="JourneyExpense.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JourneyExpense"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textBoxDistance" TextWrapping="Wrap" FontSize="15" Grid.Column="2" Grid.Row="1" Margin="10,11,10,0" Height="27" VerticalAlignment="Top"/>
        <Label Content="Расстояние" Grid.Column="1" Grid.Row="1" Margin="10,11,10,0" Height="27" VerticalAlignment="Top" FontSize="15"/>
        <TextBox x:Name="textBoxAverSpeed" TextWrapping="Wrap" FontSize="15" Height="27" VerticalAlignment="Top" Grid.Column="2" Grid.Row="2" Margin="10,11,10,0"/>
        <Label Content="Средняя скорость" FontSize="15" Grid.Column="1" Grid.Row="2" Margin="10,11,10,0" Height="34" VerticalAlignment="Top"/>
        <Label Content="Время в пути" FontSize="15" Grid.Column="1" Grid.Row="3" Margin="10,8,10,0" Height="33" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxTime" TextWrapping="Wrap" FontSize="15" Grid.Column="2" Grid.Row="3" Margin="11,11,10,0" Height="27" VerticalAlignment="Top"/>
        <Label Content="Тип топлива" VerticalAlignment="Top" FontSize="15" Grid.Column="1" Grid.Row="4" Height="27" Margin="10,11,10,0"/>
        <ComboBox x:Name="comboBoxFuelType" Grid.Column="2" Grid.Row="4" VerticalAlignment="Top" Margin="10,11,10,0" Height="27" SelectionChanged="comboBoxFuelType_SelectionChanged_1"/>
        <Label Content="Расход топлива на 100 км" FontSize="13" Grid.Column="1" Grid.Row="5" Margin="10,11,10,0" Height="27" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxConsumption" TextWrapping="Wrap" FontSize="15" Grid.Column="2" Grid.Row="5" Margin="11,11,10,0" Height="27" VerticalAlignment="Top"/>
        <Label Grid.Column="3" Content="Км" Margin="28,11,28,0" Grid.Row="1" VerticalAlignment="Top" FontSize="15" Height="27"/>
        <Label Grid.Column="3" Content="Км/Ч" Grid.Row="2" VerticalAlignment="Top" FontSize="15" Height="27" Margin="19,11,18,0"/>
        <Label Grid.Column="3" Content="Часов" Grid.Row="3" VerticalAlignment="Top" FontSize="15" Height="27" Margin="17,11,10,0"/>
        <Label x:Name="LabelConsumption" Grid.Column="3" Content="Литр" Grid.Row="5" VerticalAlignment="Top" FontSize="15" Height="29" Margin="5,10,5,0" HorizontalContentAlignment="Center"/>
        <Label Content="Вид потребления топлива" FontSize="13" Grid.Column="1" Grid.Row="6" Margin="10,11,10,0" Height="27" VerticalAlignment="Top"/>
        <ComboBox x:Name="comboBoxConsumption" Grid.Column="2" Grid.Row="6" VerticalAlignment="Top" Margin="10,11,10,0" Height="27"/>
        <Label Content="Итоговая сумма
               " FontSize="15" Grid.Column="1" Grid.Row="7" Margin="10,10,10,7"/>
        <TextBox x:Name="textBoxFuelType" TextWrapping="Wrap" FontSize="15" Grid.Column="2" Grid.Row="7" Margin="10,10,10,0" Height="27" VerticalAlignment="Top"/>
        <Label x:Name="LabelConsumption_Copy" Grid.Column="3" Content="Рублей" Grid.Row="7" VerticalAlignment="Top" FontSize="15" Height="29" Margin="5,9,5,0" HorizontalContentAlignment="Center"/>
        <Button x:Name="ButtonCalculate" Grid.Column="1" Content="Рассчитать" Grid.Row="8" Margin="10,10,10,10" Click="ButtonCalculate_Click" />

    </Grid>
</Window>
